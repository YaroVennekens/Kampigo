@model List<Ziekenfonds_Kampigo_Project.ViewModels.Groepsreis.UpcomingGroepsreizenOverviewViewModel>
<partial name="_DashboardNavBar" />


@{
    ViewData["Title"] = "Aankomende Groepsreizen";
}

<div class="container mx-auto space-y-6 p-6">
    <!-- Header -->
    <div class="rounded-t-lg bg-gradient-to-r from-gray-600 to-gray-700 p-4">
        <h2 class="text-center text-2xl font-semibold text-white">Aankomende Groepsreizen</h2>
    </div>

    <!-- Groepsreizen List Section -->
    <div class="rounded-lg bg-white p-4 shadow-lg">
        <h2 class="mb-4 text-xl font-semibold text-gray-800">Overzicht van Aankomende Groepsreizen</h2>

        <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
            <table class="w-full text-left text-sm text-gray-500 dark:text-gray-400">
                <thead class="bg-gray-50 text-xs uppercase text-gray-700 dark:bg-gray-700 dark:text-gray-400">
                    <tr>
                        <th class="px-6 py-3">Bestemming</th>
                        <th class="px-6 py-3">Begin Datum</th>
                        <th class="px-6 py-3">Eind Datum</th>
                        <th class="px-6 py-3">Aantal Deelnemers</th>
                        <th class="px-6 py-3">Aantal Monitoren</th>
                        <th class="px-6 py-3">Hoofdmonitor(en)</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var groepsreis in Model)
                        {
                            <tr class="border-b bg-white hover:bg-gray-50 dark:bg-gray-800 dark:border-gray-700 dark:hover:bg-gray-600">
                                <td class="px-6 py-4">@groepsreis.BestemmingNaam</td>
                                <td class="px-6 py-4">@groepsreis.BeginDatum.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4">@groepsreis.EindDatum.ToString("dd/MM/yyyy")</td>
                                <td class="px-6 py-4">@groepsreis.AantalDeelnemers</td>
                                <td class="px-6 py-4">@groepsreis.AantalMonitors</td>
                                <td class="px-6 py-4">
                                    @if (groepsreis.HoofdmonitorNamen?.Any() == true)
                                    {
                                        <ul>
                                            @foreach (var hoofdmonitor in groepsreis.HoofdmonitorNamen)
                                            {
                                                <li>@hoofdmonitor</li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <span class="text-gray-400">Geen hoofdmonitor(en) toegewezen</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="px-6 py-4 text-center text-gray-500">
                                Geen aankomende groepsreizen beschikbaar.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

