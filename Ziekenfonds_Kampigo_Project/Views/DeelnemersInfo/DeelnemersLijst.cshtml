@model IEnumerable<Ziekenfonds_Kampigo_Project.ViewModels.DeelnemersInfo.DeelnemersInfoViewModel>

@{
    ViewData["Title"] = "Deelnemers Lijst";
}

<div class="mt-10 bg-gray-50 dark:bg-gray-700">
    <div class="flex items-center justify-between p-6">
        <div class="max-w-screen-xl">
            <h1 class="text-2xl font-bold text-gray-800 dark:text-white">Deelnemers Lijst</h1>
        </div>

        <button onclick="history.back()" class="rounded-md bg-gray-500 px-4 py-3 text-white shadow-md hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-300">
            Terug
        </button>
    </div>
    <div class="container mx-auto space-y-6 p-6">
        <div class="overflow-x-auto">
            <table class="min-w-full overflow-hidden rounded-lg bg-white shadow-md dark:bg-gray-800">
                <thead class="bg-gray-200 dark:bg-gray-700">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Naam</th>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Voornaam</th>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Leeftijd</th>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Telefoonnummer Ouder/Voogd</th>
                        <th class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider text-gray-500 dark:text-gray-300">Medische Gegevens</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200 bg-white dark:bg-gray-800 dark:divide-gray-700">
                    @foreach (var deelnemer in Model)
                    {
                        <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                            <td class="px-6 py-4 text-sm font-medium text-gray-900 dark:text-white">@deelnemer.Naam</td>
                            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-300">@deelnemer.Voornaam</td>
                            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-300">@deelnemer.Leeftijd</td>
                            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-300">@deelnemer.TelefoonnummerOuderVoogd</td>
                            <td class="px-6 py-4 text-sm text-gray-500 dark:text-gray-300">@deelnemer.MedischeGegevens</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
