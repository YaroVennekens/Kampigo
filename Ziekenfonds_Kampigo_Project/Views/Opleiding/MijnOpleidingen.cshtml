@using Ziekenfonds_Kampigo_Project.ViewModels.OpleidingVM
@model List<OpleidingViewModel>

@{
    ViewData["Title"] = "Mijn Opleidingen";
}

<partial name="_DashboardNavBar" />
<partial name="_Notification" />

<div class="card mt-5 rounded-lg shadow-md">
    <div class="rounded-t-lg bg-gradient-to-r from-gray-600 to-gray-800 py-4">
        <div class="text-center">
            <h2 class="text-2xl font-bold text-white">Mijn Opleidingen</h2>
        </div>
    </div>
    <div class="p-6">
        <!-- Render Huidige Opleidingen -->
        <div class="mb-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Huidige Opleidingen</h3>
            <partial name="_OpleidingTable" model="Model.Where(o => o.IsBezig)" />
        </div>

        <!-- Render Toekomstige Opleidingen -->
        <div class="mb-6">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Toekomstige Opleidingen</h3>
            <partial name="_OpleidingTable" model="Model.Where(o => !o.IsBezig && !o.IsVoltooid)" />
        </div>

        <!-- Render Voltooide Opleidingen -->
        <div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white">Voltooide Opleidingen</h3>
            <partial name="_OpleidingTable" model="Model.Where(o => o.IsVoltooid)" />
        </div>
    </div>
</div>
