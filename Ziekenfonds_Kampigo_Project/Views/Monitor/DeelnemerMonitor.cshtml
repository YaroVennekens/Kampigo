@model IEnumerable<Ziekenfonds_Kampigo_Project.ViewModels.Gebruiker.GebruikerViewmodel>

<partial name="_Notification" />
@{
    ViewData["Title"] = $"Kies een gebruiker om monitor te maken";
}

<h1 class="text-2xl font-bold text-gray-800 mb-4">Gebruikerslijst</h1>

<div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <table class="w-full text-left text-sm text-gray-500">
        <thead class="bg-gray-50 text-xs uppercase text-gray-700">
            <tr>
                <th class="px-6 py-3">Naam</th>
                <th class="px-6 py-3">E-Mail</th>
                <th class="px-6 py-3">Actie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var deelnemer in Model)
            {
                <tr class="border-b bg-white hover:bg-gray-50">
                    <td class="px-6 py-4">@deelnemer.Voornaam @deelnemer.Naam</td>
                    <td class="px-6 py-4">@deelnemer.Email</td>
                    <td class="px-6 py-4">
                        <form action="/Monitor/MaakMonitor" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@deelnemer.Id" />
                            <button type="submit" class="rounded-lg bg-blue-500 px-4 py-2 text-white hover:bg-blue-600">
                                Maak Monitor
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
