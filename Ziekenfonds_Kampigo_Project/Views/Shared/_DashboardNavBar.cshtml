        <button data-collapse-toggle="dashboard-user" type="button" class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 md:hidden dark:hover:bg-gray-700 dark:focus:ring-gray-600" aria-controls="dashboard-user" aria-expanded="false">
            <span class="sr-only">Open main menu</span>
            <svg class="h-5 w-5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 17 14">
                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15" />
            </svg>
        </button>
        <div class="hidden w-full items-center justify-between md:flex md:w-auto md:order-1" id="dashboard-user">
            <ul class="mt-4 flex flex-col rounded-lg p-4 text-sm rtl:space-x-reverse dark:bg-gray-800 dark:border-gray-700 md:p-0 md:space-x-8 md:flex-row md:mt-0">
                @if (User.IsInRole(SD.Role_Deelnemer) || User.IsInRole(SD.Role_Monitor) || User.IsInRole(SD.Role_Hoofdmonitor))
                {
                    <li class="relative">
                        <button id="dropdownButton" data-dropdown-toggle="dropdownMenuReizen" class="flex items-center rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Groepsreizen
                            <svg class="ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <!-- Dropdown Menu -->
                        <ul id="dropdownMenuReizen" class="z-10 mt-1 hidden w-48 rounded border border-gray-200 bg-white py-2 shadow-lg dark:bg-gray-800">
                            <li>
                                <a asp-action="BeschikbareGroepsreizen" asp-controller="Dashboard" class="block px-4 py-2 text-xs text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">
                                    Beschikbare Groepsreizen
                                </a>
                            </li>
                            <li>
                                <a asp-action="RegisteredGroepsreizen" asp-controller="Dashboard" class="block px-4 py-2 text-xs text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">
                                    Ingeschreven Groepsreizen
                                </a>
                            </li>
                            
                            @if (User.IsInRole(SD.Role_Monitor) || User.IsInRole(SD.Role_Hoofdmonitor))
                            {
                                <li>
                                    <a asp-action="MonitorReizen" asp-controller="Dashboard" class="block px-4 py-2 text-xs text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">
                                        Mijn Monitorreizen
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Kind" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent" aria-current="page">
                            Gezinsleden Beheren
                        </a>
                    </li>
                    <li>
                        <a asp-area="Identity" asp-page="/Account/Manage/Index" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent" aria-current="page">
                            Account Beheren
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Review" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent" aria-current="page">
                            Review Schrijven
                        </a>
                    </li>
