                @if (User.IsInRole(SD.Role_Monitor) || User.IsInRole(SD.Role_Hoofdmonitor))
                {
                       <!--Drop down:  opleiding volgen, overzicht opleidingen -->
                    <li class="relative">
                        <button id="dropdownButton" data-dropdown-toggle="dropdownMenu" class="flex items-center rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Opleiding
                            <svg class="ml-1 h-5 w-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                            </svg>
                        </button>
                        <!-- Dropdown Menu -->
                        <ul id="dropdownMenu" class="z-10 mt-1 hidden w-48 rounded border border-gray-200 bg-white py-2 shadow-lg dark:bg-gray-800">
                            <li>
                                <a asp-action="MijnOpleidingen" asp-controller="Opleiding" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">
                                    Mijn opleidingen
                                </a>
                            </li>
                            <li>
                                <a asp-action="OverzichtOpleidingen" asp-controller="Opleiding" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-300 dark:hover:bg-gray-700">
                                    Overzicht Opleidingen
                                </a>
                            </li>
                        </ul>
                    </li>
                }



                @if (User.IsInRole(SD.Role_Verantwoordelijke) || User.IsInRole(SD.Role_Beheerder))
                {
                    <li>
                        <a asp-action="AankomendeReizen" asp-controller="Dashboard" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Aankomende Groepsreizen
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Groepsreis" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Groepsreizen Beheren
                        </a>
                    </li>
                    <li>
                        <a asp-action="Beheren" asp-controller="Opleiding" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Opleidingen Beheren
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Activiteit" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Activiteiten Beheren
                        </a>
                    </li>
                    <li>
                        <a asp-action="Index" asp-controller="Monitor" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Monitoren Beheren
                        </a>
                    </li>
                }
                @if (User.IsInRole(SD.Role_Beheerder))
                {
                    <li>
                        <a asp-action="Index" asp-controller="Gebruiker" class="block rounded px-3 py-2 text-gray-900 hover:bg-gray-100 dark:text-white dark:border-gray-700 md:p-0 dark:hover:bg-gray-700 dark:hover:text-white md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 md:dark:hover:bg-transparent">
                            Gebruikers Beheren
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
