@model Ziekenfonds_Kampigo_Project.ViewModels.Review.ReviewViewModel

<partial name="_DashboardNavBar" />

<partial name="_Notification" />
@{
    ViewData["Title"] = $"Review schrijven voor {Model.GroepsreisNaam}";
}

<div class="container mx-auto space-y-6 p-6">
    <!-- Header -->
    <h1 class="text-2xl font-bold text-gray-800">Review Schrijven voor @Model.GroepsreisNaam</h1>

    <!-- Review Form Section -->
    <div class="rounded-lg bg-white p-4 shadow-lg">
        <h2 class="mb-4 text-xl font-semibold text-gray-800">Nieuwe Review</h2>

        <form asp-action="SchrijfReview" asp-controller="Review" method="post" class="space-y-4">
            <input type="hidden" name="BestemmingId" value="@Model.BestemmingId" />

            <!-- Score -->
            <div>
                <label for="score" class="block text-sm font-medium text-gray-700">Score</label>
                <input id="score" name="Score" type="number" min="0" max="5" step="1" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" required />
            </div>

            <!-- Tekst -->
            <div>
                <label for="tekst" class="block text-sm font-medium text-gray-700">Review Tekst (optioneel)</label>
                <textarea id="tekst" name="Tekst" rows="5" class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" maxlength="5000"></textarea>
                <p class="mt-2 text-sm text-gray-500">Maximaal 5000 karakters.</p>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-end">
                <button type="submit" class="rounded-lg bg-blue-600 px-4 py-2 text-white shadow-sm hover:bg-blue-700 focus:ring-2 focus:ring-blue-500">Verstuur</button>
            </div>
        </form>
    </div>
</div>
