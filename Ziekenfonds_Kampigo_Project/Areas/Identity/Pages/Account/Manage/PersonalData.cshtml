@page
@model PersonalDataModel
@{
ViewData["Title"] = "Personal Data";
ViewData["ActivePage"] = ManageNavPages.PersonalData;
}



<div class="mt-4 rounded-lg bg-white shadow-md">
    <!-- Header -->
    <div class="rounded-t-lg bg-gradient-to-r from-gray-600 to-gray-700 p-4">
        <h2 class="text-center text-2xl font-semibold text-white">Persoonlijke Gegevens</h2>
    </div>
    <!-- Body -->
    <div class="p-6">
        <div class="row">
            <div class="col-md-12">
                <p class="text-sm text-gray-700">Je account bevat persoonlijke gegevens die je ons hebt verstrekt. Op deze pagina kun je deze gegevens verwijderen.</p>
                <p class="text-sm text-gray-700">
                    <strong>Het verwijderen van deze gegevens zal je account permanent verwijderen, en dit kan niet worden hersteld.</strong>
                </p>  
                
                <!-- Delete Button -->
                <div class="mt-4">
                    <a id="delete" asp-page="DeletePersonalData" class="btn rounded-md bg-red-500 px-4 py-2 text-white shadow-md hover:bg-red-600 focus:outline-none focus:ring-2 focus:ring-red-300">Verwijder account</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}