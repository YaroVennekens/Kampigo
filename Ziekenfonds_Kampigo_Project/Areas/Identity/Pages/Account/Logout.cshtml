@page
@model LogoutModel
@{
    ViewData["Title"] = "Log uit";
}

<header>
  
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="nav-link btn btn-link text-dark">Klik hier om uit te loggen</button>
            </form>
        }
        else
        {
            <p>U bent uitgelogd. Tot de volgende keer!</p>
        }
    }
</header>
